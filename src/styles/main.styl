@import normalize
@import variables


body
	// background-color: $color-bg
	background-color: #111
	background-image url('/images/bg.gif')
	color: $color-primary
	font-family: $font-family-default


#synth
	position absolute
	top 0
	left 10%
	bottom 0
	margin auto
	width 820px
	height 435px
	// width 50vw
	// height 55vh
	// min-width 820px
	// min-height 435px
	padding 5px
	display flex
	justify-content flex-start
	background-color: rgba(38, 39, 47, .75)
	box-shadow: 1px 1px 0px $color-primary
	border: 2px solid $color-primary
	border-radius 10px
	box-shadow:
		1px -0px rgb(127,255,255), 1px -1px rgb(192,255,255),
		2px -1px rgb(126,254,254), 2px -2px rgb(191,254,254),
		3px -2px rgb(125,253,253), 3px -3px rgb(190,253,253),
		4px -3px rgb(124,252,252), 4px -4px rgb(189,252,252),
		5px -4px rgb(123,251,251), 5px -5px rgb(188,251,251),
		6px -5px rgb(122,250,250), 6px -6px rgb(187,250,250)

	.module
		position relative
		flex 0 1 25%
		display flex
		flex-direction column
		justify-content center
		align-items center
		margin-right 5px
		// border: 1px dashed $color-primary
		border-radius 5px
		justify-content flex-end
		&.vco
			background-color alpha(#c561ff, .1)
		&.vcf
			background-color alpha(#5abbbf, .1)
			justify-content center
		&.vca
			background-color alpha(#61f000, .1)
			.knob-wrapper
				margin 0px 0
				&:after
					left unset
					bottom 50%
					right -25%
					margin auto
		h2
			position absolute
			top 5px
			left 0
			right 0
			margin auto
			text-align center
			text-transform uppercase
			letter-spacing 2px
			text-shadow 2px 2px 0px #111
		.knob-wrapper
			position relative
			margin 15px 0
			text-align center
			&:after
				content attr(data-label)
				position absolute
				left 0
				right 0
				bottom 5%
				margin auto
				font-size 17px
				text-align center
				text-shadow 1px 1px 0px #111
				letter-spacing 1px
			&>*
				display inline-block !important
			input
				letter-spacing 1px
				text-shadow 1px 2px 0px #111

		.osc
			display flex
			// width calc(100% - 10px)
			justify-content center
			.knob-wrapper
				flex 1 0 50%
				align-self flex-end
				user-select none

canvas
	filter drop-shadow(0px 1px 1px #111)

input
	user-select none

#keyboard
	display none